@using BuildsOfSkyrim.Models

@model PerkTree

    <svg viewBox="-160 -300 320 320">
        @{ 
            foreach(Connection c in Model.Connections)
            {
                <line x1="@(20*c.Start.GraphX)" y1="@(-20*c.Start.GraphY)" x2="@(20*c.End.GraphX)" y2="@(-20*c.End.GraphY)" style="stroke:#444; stroke-width:2px;"/>
            }
            foreach(Perk p in Model.Perks)
            {
                <circle cx="@(20*p.GraphX)" cy="@(-20*p.GraphY)" r="5" fill="white" />
                @:<text x="@(20*p.GraphX)" y="@(-20*p.GraphY+15)" fill="white" text-anchor="middle">@p.Name</text>
            }
        }
    </svg>